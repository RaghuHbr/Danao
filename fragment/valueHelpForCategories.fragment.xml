<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" class="sapUiSizeCompact">
	<Popover showHeader="false" contentWidth="320px" contentHeight="500px" placement="Auto" ariaLabelledBy="master-title">
		<content>
		<NavContainer width="100%" height="26em">
			<Page showNavButton="false" title="Select Categories" showHeader="true">
				<List items="{browseByData>/Catrgories}" mode="SingleSelectMaster" selectionChange="handleChangeCategory">
					<items>
						<StandardListItem type="Navigation" title="{browseByData>title}"></StandardListItem>
					</items>
				</List>
			</Page>
			<Page showNavButton="true" title="Browse by" navButtonPress="onPage2CategoryNavPress">
				<content>
					<List items="{appView>/categoryItems/Items}" mode="SingleSelectMaster" selectionChange="handleCollectionSelection">
						<items>
							<StandardListItem type="Navigation" title="{appView>title}"></StandardListItem>
						</items>
					</List>
				</content>
			</Page>
		</NavContainer>
		</content>
		<!--<footer>-->
		<!--	<OverflowToolbar>-->
		<!--		<ToolbarSpacer/>-->
		<!--		<Button id="cancel" text="Cancel" press="onCloseCategory"/>-->
		<!--	</OverflowToolbar>-->
		<!--</footer>-->
	</Popover>
</core:FragmentDefinition>