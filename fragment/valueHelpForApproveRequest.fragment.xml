<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<Dialog title="Confirm Approve" contentWidth="30%">
		<endButton>
			<Button text="Reject" type="Reject" press="handleRejectButtonPress"/>
		</endButton>
		<beginButton>
			<Button text="Approve" press="handleApproveButtonPress" type="Emphasized"/>
		</beginButton>
		<Label class="sapUiSmallMarginBegin sapUiSmallMarginTop" text="Do you want to approve the User request?"/>
			<f:SimpleForm minWidth="1024" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" labelSpanL="3" labelSpanM="3"
				emptySpanL="4" emptySpanM="4" columnsL="1" columnsM="1">
				<f:content>
					<Label required="true" text="Discount Value"/>
					<HBox>
						<Input value="" placeholder="Enter Discount value" rows="7"/>
						<Text text="%" class="sapUiSmallMarginBegin"/>
					</HBox>
				</f:content>
			</f:SimpleForm>
		</Dialog>
	</core:FragmentDefinition>