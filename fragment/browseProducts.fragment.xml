<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Dialog title="{i18n>selectRequest}" showHeader="false" contentWidth="80%" contentHeight="100%" class="banner_image">
		<endButton>
			<Button text="Cancel" type="Reject" press="handleCancelPress"/>
		</endButton>
		<NavContainer>
			<Page showNavButton="false" title="Select Customer" showHeader="true">
				<List items="{customerInfo>/}" mode="SingleSelectMaster" selectionChange="handleSelectCustomer">
					<items>
						<StandardListItem type="Navigation" title="{customerInfo>customerName}" description="{customerInfo>city}, {customerInfo>country}"></StandardListItem>
					</items>
				</List>
			</Page>
			<Page showNavButton="true" title="Browse by" navButtonPress="onPage2BrowseByNavPress">
				<content>
					<l:BlockLayout background="Default">
						<l:BlockLayoutRow>
							<l:BlockLayoutCell class="sapUiNoContentPadding">
								<Carousel showPageIndicator="false" loop="true" pageChanged=".onCarouselPageChanged" visible="{=!${device>/system/phone}}"
									tooltip="{i18n>welcomeDescription}">
									<pages>
										<VBox renderType="Bare">
											<Image class="banner_image" src="https://www.ulcdn.net/images/products/312767/original/Palermo_Sofa_Bed_Olive_32.jpg?1608113876"
												width="100%" height="14.5rem"/>
										</VBox>
										<VBox renderType="Bare">
											<Image class="banner_image"
												src="https://cdn.shopify.com/s/files/1/0290/6177/5439/files/LR_7e2530f6-0d59-4ae3-b555-aff9adca3746.jpg?v=1637498431" width="100%"
												height="14.5rem"/>
										</VBox>
										<VBox renderType="Bare">
											<Image class="banner_image" src="https://ii2.pepperfry.com/media/wysiwyg/banners/HB02_Web_2x-n.jpg" width="100%" height="12.5rem"/>
										</VBox>
									</pages>
								</Carousel>
							</l:BlockLayoutCell>
						</l:BlockLayoutRow>
						<l:BlockLayoutRow visible="true">
							<l:BlockLayoutCell width="1" class="browseByCellClass sapUiResponsiveContentPadding" title="Browse By" backgroundColorSet="ColorSet9"
								backgroundColorShade="ShadeA" titleAlignment="Left"/>
						</l:BlockLayoutRow>
						<l:BlockLayoutRow visible="true" class="blockBackground">
							<l:BlockLayoutCell backgroundColorSet="ColorSet10" backgroundColorShade="ShadeA" class="blockBackground">
								<l:VerticalLayout>
									<core:Icon press="sayTryLater" src="sap-icon://attachment-e-pub" size="3rem" color="white" class="margin"/>
									<Link press="handleBrowseCatalogPress" text="Collection" class="sapMTitleStyleH1 sapUiTinyMarginTopBottom"/>
									<Link text="View All" press="handleCollectionSelection" class="sapUiTinyMarginBottom"/>
								</l:VerticalLayout>
							</l:BlockLayoutCell>
							<l:BlockLayoutCell backgroundColorSet="ColorSet11" backgroundColorShade="ShadeB" class="blockBackgroundAlt">
								<l:VerticalLayout>
									<core:Icon press="sayTryLater" src="sap-icon://product" size="3rem" color="white" class="margin"/>
									<Link press="handleBrowseCategoryPress" text="Products"
										class="sapMTitleStyleH1 sapUiDocTitleLink textBgColor darkTheme padding sapUiTinyMarginTopBottom"/>
									<Link text="View All" press="handleCollectionSelection" class="sapUiTinyMarginBottom"/>
								</l:VerticalLayout>
							</l:BlockLayoutCell>
						</l:BlockLayoutRow>
					</l:BlockLayout>
				</content>
			</Page>
		</NavContainer>
	</Dialog>
</core:FragmentDefinition>